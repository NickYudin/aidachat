<%= turbo_frame_tag ai_chat do %>
  <div class="flex flex-col p-4 border border-gray-300 rounded shadow-sm bg-gray-50">
    <div class="flex items-center space-x-2">
      <%= link_to "##{ai_chat.id}",
                  ai_chat_path(ai_chat),
                  data: { turbo_frame: "_top" },
                  class: "text-blue-500 hover:underline" %>
      <b><%= ai_chat.ai_model_name %></b> â‡¢
    </div>

    <div class="text-gray-700 font-medium"><%= ai_chat.title %></div>

    <div class="flex space-x-2 mt-2">
      <%= button_to ai_chat_path(ai_chat),
                    method: :delete,
                    form: { data: { turbo_frame: "_top", turbo_confirm: "Are you sure?" } },
                    class: "bg-gray-200 text-gray-700 px-2 py-1 rounded hover:bg-gray-300" do %>
        <span class="material-icons">delete</span>
      <% end %>

      <%= link_to ai_chat_path(ai_chat),
                  data: { turbo_frame: "_top" },
                  class: "bg-gray-200 text-gray-700 px-2 py-1 rounded hover:bg-gray-300" do %>
        <span class="material-icons">arrow_forward</span>
      <% end %>
    </div>
  </div>
<% end %>
