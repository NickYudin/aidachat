<button id="signup-button" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700" onclick="document.getElementById('signup-popup').style.display = 'flex';">Sign Up</button>
<button id="signin-button" class="text-blue-500 px-4 py-2 rounded hover:text-blue-700" onclick="document.getElementById('signin-popup').style.display = 'flex';">Sign In</button>

<div id="signup-popup" class="flex fixed inset-0 items-center justify-center bg-gray-800 bg-opacity-50" style="display: none;">
  <div class="bg-white p-6 rounded shadow-lg w-80 relative">
    <button class="absolute top-2 right-2 text-gray-500 hover:text-red-500" onclick="document.getElementById('signup-popup').style.display = 'none';">×</button>
    <h2 class="text-xl font-bold mb-4 text-center">Sign Up</h2>
    <form method="post" action="<%= new_user_registration_path %>">
      <%= csrf_meta_tags %>
      <label for="email" class="block text-sm font-medium text-gray-700">Email:</label>
      <input type="email" id="email" name="user[email]" class="w-full border border-gray-300 rounded px-3 py-2 mt-1 mb-4" required>
      <label for="password" class="block text-sm font-medium text-gray-700">Password:</label>
      <input type="password" id="password" name="user[password]" class="w-full border border-gray-300 rounded px-3 py-2 mt-1 mb-4" required>
      <label for="password_confirmation" class="block text-sm font-medium text-gray-700">Confirm Password:</label>
      <input type="password" id="password_confirmation" name="user[password_confirmation]" class="w-full border border-gray-300 rounded px-3 py-2 mt-1 mb-4" required>
      <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700 w-full">Submit</button>
    </form>
  </div>
</div>

<div id="signin-popup" class="fixed inset-0 flex items-center justify-center bg-gray-800 bg-opacity-50" style="display: none;">
  <div class="bg-white p-6 rounded shadow-lg w-80 relative">
    <button class="absolute top-2 right-2 text-gray-500 hover:text-red-500" onclick="document.getElementById('signin-popup').style.display = 'none';">×</button>
    <h2 class="text-xl font-bold mb-4 text-center">Sign In</h2>
    <form method="post" action="<%= new_user_session_path %>">
      <%= csrf_meta_tags %>
      <label for="email" class="block text-sm font-medium text-gray-700">Email:</label>
      <input type="email" id="email" name="user[email]" class="w-full border border-gray-300 rounded px-3 py-2 mt-1 mb-4" required>
      <label for="password" class="block text-sm font-medium text-gray-700">Password:</label>
      <input type="password" id="password" name="user[password]" class="w-full border border-gray-300 rounded px-3 py-2 mt-1 mb-4" required>
      <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700 w-full">Submit</button>
    </form>
  </div>
</div>
